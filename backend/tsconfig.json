{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,

  },
  "include": ["./src"],
  "exclude": ["node_modules", "./dist"],
  "typeRoots": ["./src/types", "./node_modules/@types"]
}
